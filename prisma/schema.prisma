// Gateway Prisma Schema
// Manages shared/cross-product database tables

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["gateway"]
}

// Leads table - Cross-product lead capture
model Lead {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  products  String[]
  status    String   @default("active")
  metadata  Json     @default("{}")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@map("leads")
  @@schema("gateway")
  @@index([email])
  @@index([products])
  @@index([status])
}
